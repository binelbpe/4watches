<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signup</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/signup.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <!-- Custom CSS -->
    <style>
      .invalid-feedback {
        color: red;
        display: none;
      }

      .signup-container {
        background-color: #bca374;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.1);
      }
    </style>
  </head>
  <body class="signupbody">
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="signup-container">
            <!-- Signup form -->
            <h2 class="text-center mb-4">Signup</h2>
            <!-- Display error message if it exists -->
            <% if(errorMessage) { %>
            <div class="alert alert-danger" role="alert">
              <%= errorMessage %>
            </div>
            <% } %>

            <form
              id="signupForm"
              action="/signup"
              method="POST"
              onsubmit="return validateForm()"
            >
              <div class="mb-3">
                <label for="fullname" class="form-label">Full Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="fullname"
                  name="fullname"
                  placeholder="Enter your full name"
                  pattern="[a-zA-Z\s]+"
                />
                <div id="fullnameError" class="invalid-feedback"></div>
              </div>
              <div class="mb-3">
                <label for="phone" class="form-label">Phone</label>
                <input
                  type="tel"
                  class="form-control"
                  id="phone"
                  name="phone"
                  placeholder="Enter your phone number"
                  pattern="\d{10}"
                />
                <div id="phoneError" class="invalid-feedback"></div>
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="email"
                  placeholder="Enter your email address"
                  pattern="[^\s@]+@[^\s@]+\.[^\s@]+"
                />
                <div id="emailError" class="invalid-feedback"></div>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  placeholder="Enter your password"
                  pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*])(?!.*\s).{8,}"
                />
                <div id="passwordError" class="invalid-feedback"></div>
              </div>
              <div class="mb-3">
                <label for="confirmPassword" class="form-label"
                  >Confirm Password</label
                >
                <input
                  type="password"
                  class="form-control"
                  id="confirmPassword"
                  name="confirmPassword"
                  placeholder="Confirm your password"
                />
                <div id="confirmPasswordError" class="invalid-feedback"></div>
              </div>
              <div class="d-grid mb-3">
                <button class="btn btn-primary btn-lg btn-signup" type="submit">
                  Signup
                </button>
              </div>
            </form>
            <p class="text-center mb-0">
              Already have an account?
              <a href="/login" class="login-link">Login</a>
            </p>
          </div>
        </div>
      </div>
    </div>
    <script>
      // Validation functions
      function validateInput(inputId, regexPattern, errorMessage) {
        const input = document.getElementById(inputId);
        const value = input.value.trim();
        const errorElement = document.getElementById(inputId + "Error");

        if (!regexPattern.test(value)) {
          input.classList.add("is-invalid");
          errorElement.textContent = errorMessage;
          errorElement.style.display = "block";
          return false;
        } else {
          input.classList.remove("is-invalid");
          errorElement.textContent = "";
          errorElement.style.display = "none";
          return true;
        }
      }

      function validateForm() {
        const fullNameRegex = /^[^\s][a-zA-Z]{3,}(?:\s[a-zA-Z]*)?$/; // Allows letters, spaces, apostrophes, hyphens
        const phoneRegex = /^\d{10}$/; // Allows exactly 10 digits
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        const passwordRegex =
          /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/; // Password validation as described

        const isFullNameValid = validateInput(
          "fullname",
          fullNameRegex,
          "Invalid full name"
        );
        const isPhoneValid = validateInput(
          "phone",
          phoneRegex,
          "Invalid phone number"
        );
        const isEmailValid = validateInput(
          "email",
          emailRegex,
          "Invalid email address"
        );
        const isPasswordValid = validateInput(
          "password",
          passwordRegex,
          "Password must be at least 8 characters long and contain at least one lowercase letter, one uppercase letter, one digit, and one special character"
        );
        const isConfirmPasswordValid = validateConfirmPassword();

        return (
          isFullNameValid &&
          isPhoneValid &&
          isEmailValid &&
          isPasswordValid &&
          isConfirmPasswordValid
        );
      }

      function validateConfirmPassword() {
        const password = document.getElementById("password").value.trim();
        const confirmPassword = document
          .getElementById("confirmPassword")
          .value.trim();
        const errorElement = document.getElementById("confirmPasswordError");

        if (password !== confirmPassword) {
          document.getElementById("password").classList.add("is-invalid");
          document
            .getElementById("confirmPassword")
            .classList.add("is-invalid");
          errorElement.textContent = "Passwords do not match";
          errorElement.style.display = "block";
          return false;
        } else {
          document.getElementById("password").classList.remove("is-invalid");
          document
            .getElementById("confirmPassword")
            .classList.remove("is-invalid");
          errorElement.textContent = "";
          errorElement.style.display = "none";
          return true;
        }
      }

      // Add event listeners for input fields to validate on input change
      document
        .getElementById("fullname")
        .addEventListener("input", function () {
          validateInput(
            "fullname",
            /^[^\s][a-zA-Z]{3,}(?:\s[a-zA-Z]*)?$/,
            "Invalid full name"
          );
        });
      document.getElementById("phone").addEventListener("input", function () {
        validateInput("phone", /^\d{10}$/, "Invalid phone number");
      });
      document.getElementById("email").addEventListener("input", function () {
        validateInput(
          "email",
          /^[a-zA-Z0-9._-]+@[a-z]+\.[a-z]{2,}$/,
          "Invalid email address"
        );
      });
      document
        .getElementById("password")
        .addEventListener("input", function () {
          validateInput(
            "password",
            /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/,
            "Password must be at least 8 characters long and contain at least one lowercase letter, one uppercase letter, one digit, and one special character"
          );
        });
      document
        .getElementById("confirmPassword")
        .addEventListener("input", validateConfirmPassword);
    </script>
  </body>
</html>
