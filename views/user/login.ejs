<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/login.css" />
  </head>
  <body class="loginbody">
    <div class="container logincontainer mt-5">
      <h2 class="text-center mb-4">Login</h2>
      <form id="loginForm" action="/login" method="POST">
        <div class="mb-3">
          <label for="loginEmail" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="loginEmail"
            name="email"
            required
          />
          <div id="loginEmailError" class="invalid-feedback"></div>
        </div>
        <div class="mb-3">
          <label for="loginPassword" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="loginPassword"
            name="password"
            required
          />
          <div id="loginPasswordError" class="invalid-feedback"></div>
        </div>
        <div class="d-grid mb-3">
          <button class="btn btn-primary btn-lg btn-login" type="submit">
            Login
          </button>
        </div>
      </form>
      <p class="text-center mb-3">
        <a href="/forgot-password" class="forgot-password-link">Forgot Password?</a>
      </p>
      <p class="text-center mb-0">
        Don't have an account? <a href="signup" class="signup-link">Signup</a>
      </p>
      <a href="/auth/google" class="btn btn-danger btn-lg btn-google"
        >Login with Google</a
      >
      <% if(errorMessage) { %>
      <div class="alert alert-danger mt-3" role="alert">
        <%= errorMessage %>
      </div>
      <% } %>
    </div>
    <script src="/js/main.js"></script>
    <script>
      // Validation functions
      function validateInput(inputId, regexPattern, errorMessage) {
        const input = document.getElementById(inputId);
        const value = input.value.trim();
        const errorElement = document.getElementById(inputId + "Error");

        if (!regexPattern.test(value)) {
          input.classList.add("is-invalid");
          errorElement.textContent = errorMessage;
          return false;
        } else {
          input.classList.remove("is-invalid");
          errorElement.textContent = "";
          return true;
        }
      }

      document
        .getElementById("loginForm")
        .addEventListener("submit", function (event) {
          event.preventDefault(); // Prevent form submission if validation fails

          const emailRegex = /^[a-zA-Z0-9._-]+@[a-z]+\.[a-z]{2,}$/;
          const passwordRegex =
            /^(?=.*[A-Z])(?=.*[a-z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;

          const isEmailValid = validateInput(
            "loginEmail",
            emailRegex,
            "Invalid email address"
          );
          const isPasswordValid = validateInput(
            "loginPassword",
            passwordRegex,
            "Invalid password"
          );

          if (isEmailValid && isPasswordValid) {
            // If both email and password are valid, submit the form
            this.submit();
          }
        });
    </script>
  </body>
</html>
