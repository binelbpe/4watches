<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Admin Login | Watch Gallery</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex,nofollow" />
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <style>
      :root {
        --primary-color: #bca374;
        --primary-dark: #a68b5b;
      }
      
      body {
        background-color: #f8f9fa;
        min-height: 100vh;
        margin: 0;
        padding: 15px;
      }
      
      .login-container {
        min-height: calc(100vh - 30px);
        display: flex;
        align-items: center;
        justify-content: center;
      }
      
      .login-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        overflow: hidden;
        width: 100%;
        max-width: 900px;
        margin: auto;
      }
      
      .brand-side {
        background-color: var(--primary-color);
        padding: 2rem;
        min-height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
      }
      
      .form-side {
        padding: 2rem;
      }
      
      .form-floating > label {
        color: #6c757d;
      }
      
      .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.25rem rgba(188, 163, 116, 0.25);
      }
      
      .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        padding: 0.75rem;
      }
      
      .btn-primary:hover {
        background-color: var(--primary-dark);
        border-color: var(--primary-dark);
      }
      
      .error-message {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
      }
      
      .brand-logo {
        text-align: center;
        padding: 1rem;
      }
      
      .brand-logo i {
        font-size: clamp(32px, 5vw, 48px);
        margin-bottom: 1rem;
      }
      
      .brand-logo h1 {
        font-size: clamp(1.5rem, 3vw, 2rem);
        margin-bottom: 1rem;
      }
      
      .brand-logo p {
        font-size: clamp(0.875rem, 2vw, 1rem);
      }
      
      /* Responsive adjustments */
      @media (max-width: 991.98px) {
        .login-card {
          margin: 1rem;
        }
        
        .brand-side {
          border-radius: 10px 10px 0 0;
          min-height: 200px;
        }
      }
      
      @media (max-width: 575.98px) {
        body {
          padding: 10px;
        }
        
        .form-side,
        .brand-side {
          padding: 1.5rem;
        }
        
        .login-card {
          margin: 0;
        }
        
        .form-floating > label {
          font-size: 0.9rem;
        }
        
        .btn-primary {
          padding: 0.6rem;
        }
        
        h2.h4 {
          font-size: 1.25rem;
        }
      }
      
      /* Ensure form inputs are touch-friendly on mobile */
      @media (max-width: 767.98px) {
        .form-control {
          min-height: 3rem;
        }
        
        .form-floating > label {
          padding: 0.75rem;
        }
      }
      
      /* Fix for iPhone 5/SE and other small devices */
      @media (max-width: 320px) {
        .form-side,
        .brand-side {
          padding: 1rem;
        }
        
        .brand-logo h1 {
          font-size: 1.25rem;
        }
        
        .brand-logo p {
          font-size: 0.8rem;
        }
      }
      
      .brand-image {
        width: 120px;
        height: auto;
        margin-bottom: 1.5rem;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      }
      
      @media (max-width: 576px) {
        .brand-image {
          width: 100px;
        }
      }
    </style>
  </head>
  <body>
    <div class="login-container">
      <div class="login-card">
        <div class="row g-0">
          <!-- Brand Side -->
          <div class="col-lg-6">
            <div class="brand-side">
              <div class="brand-logo">
                <img src="/images/logo.png" alt="4WATCHES Logo" class="mb-4 brand-image">
                <h1 class="h3">4WATCHES</h1>
                <p class="mb-0">Admin Dashboard | Welcome Back</p>
              </div>
            </div>
          </div>
          
          <!-- Form Side -->
          <div class="col-lg-6">
            <div class="form-side">
              <h2 class="h4 mb-4">Login</h2>
              <form id="login-form" method="post" onsubmit="return validateForm()">
                <div class="form-floating mb-3">
                  <input
                    type="text"
                    class="form-control"
                    id="login-username"
                    name="loginUsername"
                    placeholder="Username"
                    autocomplete="username"
                  />
                  <label for="login-username">Username</label>
                  <span id="username-error" class="error-message"></span>
                </div>
                
                <div class="form-floating mb-4">
                  <input
                    type="password"
                    class="form-control"
                    id="login-password"
                    name="loginPassword"
                    placeholder="Password"
                    autocomplete="current-password"
                  />
                  <label for="login-password">Password</label>
                  <span id="password-error" class="error-message"></span>
                </div>
                
                <button type="submit" class="btn btn-primary w-100">
                  <i class="fas fa-sign-in-alt me-2"></i>Login
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- JavaScript Dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      function validateForm() {
        var username = document.getElementById("login-username").value;
        var password = document.getElementById("login-password").value;
        var usernameError = document.getElementById("username-error");
        var passwordError = document.getElementById("password-error");

        usernameError.innerHTML = "";
        passwordError.innerHTML = "";

        // Regex patterns for validation
        var usernameRegex = /^[a-zA-Z0-9_]{3,20}$/;
        var passwordRegex = /^(?=.*[A-Z])(?=.*[a-z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;

        // Username validation
        if (username.trim() === "") {
          usernameError.innerHTML = "Please enter your username";
          return false;
        } else if (!usernameRegex.test(username)) {
          usernameError.innerHTML = "Username must be alphanumeric with underscore, 3 to 20 characters";
          return false;
        }

        // Password validation
        if (password.trim() === "") {
          passwordError.innerHTML = "Please enter your password";
          return false;
        } else if (!passwordRegex.test(password)) {
          passwordError.innerHTML = "Password must be at least 8 characters long, contain at least one uppercase letter, one lowercase letter, one number, and one special character";
          return false;
        }

        return true;
      }
    </script>
  </body>
</html>
