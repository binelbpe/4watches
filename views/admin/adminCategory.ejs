  <script>
   function validateCategoryForm(form) {
  console.log("Form submitted"); // Check if the function is being called
  var categoryInput = form.querySelector('input[name="category"]');
  var category = categoryInput.value;

  console.log("Category value:", category); // Check the value of the category input

  // Regular expression for validation
  var categoryRegex = /^[a-zA-Z\s]+$/; // Matches only alphabets and spaces

  if (category.trim() === "") {
    Swal.fire({
      title: 'Error',
      text: 'Please enter a category',
      icon: 'error',
      customClass: {
        container: 'swal2-container'
      }
    });
    return false;
  }

  if (!categoryRegex.test(category)) {
    Swal.fire({
      title: 'Error',
      text: 'Category name can only contain letters and spaces',
      icon: 'error',
      customClass: {
        container: 'swal2-container'
      }
    });
    return false;
  }

  console.log("Validation successful"); // Check if validation passes
  return true;
}

  </script>
  
