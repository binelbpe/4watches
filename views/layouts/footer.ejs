<style>
  :root {
    --gold-primary: #BCA374;
    --gold-secondary: #A38F5F;
    --gold-light: #D4C5A3;
    --white: #FFFFFF;
    --off-white: #F8F9FA;
    --dark: #333333;
  }

  /* Second Footer (Features) */
  .second-footer {
    background: linear-gradient(45deg, #FFFFFF, #F8F9FA);
    padding: 2.5rem 0;
    border-top: 1px solid rgba(188, 163, 116, 0.1);
    border-bottom: 1px solid rgba(188, 163, 116, 0.1);
  }

  .secfootercontainer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .feature {
    flex: 1;
    min-width: 200px;
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.5rem;
    transition: transform 0.3s ease;
  }

  .feature:hover {
    transform: translateY(-5px);
  }

  .feature i {
    font-size: 2rem;
    color: var(--gold-primary);
    background: rgba(188, 163, 116, 0.1);
    padding: 1rem;
    border-radius: 50%;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .feature:hover i {
    background: var(--gold-primary);
    color: var(--white);
    transform: rotate(360deg);
  }

  .feature-text {
    font-size: 0.9rem;
    color: var(--dark);
    font-weight: 500;
    line-height: 1.2;
  }

  .badge-icon {
    position: relative;
  }

  .badge.badge-primary {
    background-color: var(--gold-primary);
    color: white;
    padding: 1rem;
    border-radius: 50%;
    font-size: 0.8rem;
    font-weight: bold;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Footer Separation */
  .footer-separation {
    height: 3rem;
    background: linear-gradient(90deg, var(--white) 0%, var(--gold-light) 50%, var(--white) 100%);
    opacity: 0.1;
  }

  /* Main Footer */
  .main-footer {
    background-color: var(--white);
    padding: 4rem 0;
    position: relative;
  }

  .main-footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, transparent, var(--gold-primary), transparent);
  }

  .footer-section {
    padding: 0 2rem;
  }

  .footer-section h5 {
    color: var(--dark);
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    position: relative;
    display: inline-block;
  }

  .footer-section h5::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, var(--gold-primary), transparent);
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section ul li {
    margin-bottom: 0.8rem;
    color: #666;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    padding-left: 1.2rem;
  }

  .footer-section ul li::before {
    content: 'â€º';
    position: absolute;
    left: 0;
    color: var(--gold-primary);
    font-size: 1.2rem;
    opacity: 0;
    transition: all 0.3s ease;
  }

  .footer-section ul li:hover {
    color: var(--gold-primary);
    padding-left: 1.5rem;
  }

  .footer-section ul li:hover::before {
    opacity: 1;
  }

  .social-media-icons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .social-media-icons a {
    color: #666;
    text-decoration: none;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .social-media-icons a::before {
    content: '';
    width: 30px;
    height: 1px;
    background-color: var(--gold-primary);
    transition: all 0.3s ease;
  }

  .social-media-icons a:hover {
    color: var(--gold-primary);
    padding-left: 1rem;
  }

  .social-media-icons a:hover::before {
    width: 50px;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .secfootercontainer {
      flex-direction: column;
      text-align: center;
    }

    .feature {
      justify-content: center;
      width: 100%;
    }

    .footer-section {
      padding: 0 1rem;
      margin-bottom: 2rem;
      text-align: center;
    }

    .footer-section h5::after {
      left: 50%;
      transform: translateX(-50%);
    }

    .social-media-icons {
      align-items: center;
    }

    .social-media-icons a::before {
      display: none;
    }
  }
</style>



